{
    "componentPath": "./src/wwObject.vue",
    "type": "wwObject",
    "options": {
        "sizable": true
    },
    "editor": {
        "label": {
            "fr": "Image",
            "en": "Image"
        },
        "menuOptions": {
            "quick": {
                "sections": ["url", "ww-sizing", "alt"]
            }
        },
        "styleOptions": {
            "zoom": {
                "type": "Number",
                "label": { "en": "Zoom", "fr": "Zoom" },
                "options": {
                    "min": 0.01,
                    "max": 5,
                    "step": 0.01
                }
            },
            "x": {
                "type": "Number",
                "label": { "en": "Position X", "fr": "Position X" },
                "options": {
                    "min": -100,
                    "max": 100
                }
            },
            "y": {
                "type": "Number",
                "label": { "en": "Position Y", "fr": "Position Y" },
                "options": {
                    "min": -100,
                    "max": 100
                }
            },
            "reset": {
                "type": "Button",
                "options": {
                    "text": { "en": "Reset zoom & pos.", "fr": "RÃ©init. zoom & pos." },
                    "color": "blue",
                    "action": "resetZoom"
                }
            },
            "coverContain": {
                "type": "Button",
                "options": {
                    "text": { "en": "Switch Cover / Contain", "fr": "Zoom auto" },
                    "color": "blue",
                    "action": "switchCoverContain"
                }
            },
            "overlay": {
                "type": "Color",
                "path": "style.overlay",
                "label": { "en": "Overlay", "fr": "Overlay" },
                "options": {
                    "nullable": true,
                    "gradient": true
                }
            },
            "filter": {
                "type": "CssFilter",
                "path": "style.filter",
                "label": { "en": "Filters", "fr": "Filtres" }
            }
        },
        "settingsOptions": {
            "url": {
                "label": { "en": "Image", "fr": "Image" },
                "type": "Image",
                "bindable": true
            },
            "alt": {
                "label": { "en": "Alt", "fr": "Alt" },
                "type": "Text",
                "multiLang": true,
                "options": {
                    "placeholder": "Image description"
                }
            }
        }
    }
}
